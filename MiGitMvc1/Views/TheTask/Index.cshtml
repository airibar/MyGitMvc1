@model MiGitMvc1.ModelView.AllTasks

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <h2>Pending Tasks</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Creation Date</th>
                <th scope="col">Due Date</th>
                <th scope="col">@Html.ActionLink("Add Task", "AddTask", "DetailTask")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TheListTask)
                {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.DateCreation.ToString("MM/dd/yyyy")</td>
                <td>@item.DueDate</td>
                <td>@Html.ActionLink("View Task", "TaskDetail", "DetailTask", new { Id = @item.Id }, null)</td>
                <td>@Html.ActionLink("Delete Task", "TaskDel", "DetailTask", new { Id = @item.Id }, null)</td>
            </tr>
                }
            

        </tbody>
    </table>

    


